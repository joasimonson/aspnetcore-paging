<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <RootNamespace>JustPaging.AspNetCore</RootNamespace>
    <Version>1.0.0</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>JustPaging.AspNetCore</PackageId>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
    <Description>Provides ability to return paging results from MVC APIs either by attribute or by result.</Description>
    <PackageProjectUrl>https://github.com/joasimonson/aspnetcore-paging</PackageProjectUrl>
    <RepositoryUrl>https://github.com/joasimonson/aspnetcore-paging</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Remove=".gitignore" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.2.0" />
  </ItemGroup>

</Project>
